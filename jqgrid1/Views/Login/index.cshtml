
@{
    ViewBag.Title = "index";
}

<!DOCTYPE HTML>
<html>
<head>
    <title>广州力恒盛电子有限公司 </title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta http-equiv="imagetoolbar" content="no" />
    <link rel="stylesheet" href="~/styles/layout.css" type="text/css" />
    <link href="~/styles/ui.jqgrid.css" rel="stylesheet" />
    <link href="~/styles/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />
    <link href="~/styles/select2.min.css" rel="stylesheet" />
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/JQGrid/jquery-1.11.0.min.js"></script>
    <script src="~/Scripts/JQGrid/jquery.jqGrid.min.js"></script>
    <script src="~/Scripts/JQGrid/grid.locale-cn.js"></script>
    <script src="~/Scripts/layer/layer.js"></script>
    <script src="~/Scripts/layui/layui.all.js"></script>
</head>

<body id="top">
    <!-- ####################################################################################################### -->
    <div class="wrapper">
        <div id="header">
            <div class="fl_left">
                <h1><a href="#"><strong>力</strong>恒盛电子 <strong>电子报检单管理系统</strong></a></h1>
                <p>广州力恒盛电子有限公司</p>
            </div>
            <br class="clear" />
        </div>
    </div>
    <div class="wrapper col2">
        <div id="topbar">
            <div id="topnav">
                <ul>
                    <li class="active"><a href="">登陆：</a></li>
                </ul>
            </div>
            <div id="search">
            </div>
            <br class="clear" />
        </div>
    </div>

    <div class="wrapper">
        <div class="container">
            <div class="content">
                <form class="layui-form" action="">
                    <div class="layui-form-item">
                        <div class="layui-form-label">用户名:</div>
                        <div class="layui-input-block">
                            <input type="text" name="username" id="username" required lay-verify="required" autocomplete="off" class="layui-input" style="width:250px">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div class="layui-form-label">密码:</div>
                        <div class="layui-input-block">
                            <input type="password" name="password" id="password" required lay-verify="required" autocomplete="off" class="layui-input" style="width:250px">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <!--<button class="layui-btn" id="LoginButton" onclick="loginprocess()">登陆</button>-->
                            <input type="button" id="LoginButton" onclick="loginprocess()" value="登陆" style="width:100px" />
                            </div>
                    </div>

                </form>
            </div>
        </div>
        <br class="clear" />
    </div>


                <div class="wrapper col8">
                    <div id="copyright">
                        <p class="fl_left">Guangzhou LHS Electric Co.,Ltd Copyright &copy; 2017 - All Rights Reserved - <a href="#">By Deric Xie</a></p>
                        <br class="clear" />
                    </div>
                </div>


    <script type="text/javascript">


        $(document).ready(function () {
            console.log(window.document.location.href);
            console.log(window.document.location.pathname);

            layui.use('form', function () {
                var form = layui.form;
                form.render();


            });


        });


        function loginprocess() {
            var user = $("#username").val();
            var pass = $("#password").val();
            
            var pathname = window.document.location.pathname;


            if (pathname.length == 1) {
                pathname = "";
            }

            $.ajax({
                type: "GET",
                url: pathname+"/Login/UserCheck",
                async: false,
                datatype: "JSON",
                data: {
                    userdata: user,
                    passdata:pass
                },
                success: function (data) {
                    var resdata = eval("(" + data + ")");
                    if (resdata.restxt == "loginsuccess") {
                        window.location.href = resdata.url;
                    } else {
                        alert("登陆失败");

                    }
                }
            });

        }

    </script>

</body>
</html>

