        $(document).ready(function () {
            $("#mytesttable").jqGrid({
                url: 'Default/GetDataFromStockinfo',
                datatype: "json",
                mtype: 'GET',
                colNames: ['code', 'codetype','productmodel'],
                colModel: [
                { name: 'code', index: 'code', width: 180, stype: 'text' ,editable: true},
                { name: 'codetype', index: 'codetype', width: 180,editable:true },
                { name: 'productmodel', index: 'productmodel', width: 180,editable:true },
                ],
                rowNum: 10,
                loadonce:true,
                pager: '#mytesttablePage',
                sortname: 'code',
                viewrecords: true,
                sortorder: "codetype",
                caption: "barcode elements",
                editurl: 'Default/EditDataFromStockinfo'
            });

            $("#mytesttable").jqGrid('navGrid','#mytesttablePage',
                {
                    edit: true,
                    add: true,
                    del: true,
                    search: true,
                    searchtext: "查找",
                    addtext: "添加",
                    edittext: "编辑",
                    deltext: "删除",
                    refreshtext: "刷新"
                },
                {
                    closeOnEscape: true,
                    reloadAfterSubmit: true,
                    drag: true,
                    afterSubmit: function (response, postdata) {
                        if (response.responseText == "") {
                            $(this).jqGrid('setGridParam', { datatype: 'JSON' }).trigger('reloadGrid');
                            return [true, '']
                        } else {
                            $(this).jqGrid('setGridParam', { datatype: 'JSON' }).trigger('reloadGrid');
                            return [false,response.responseText]
                        }
                    }
                }
                )
    

        });


    </script>

